{
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "{aws_account_id}.dkr.ecr.ap-northeast-1.amazonaws.com/development/sbcntr/backend:latest",
      "cpu": 1024,
      "memory": 1024,
      "portMappings": [
        {
          "name": "backend",
          "containerPort": 5175,
          "hostPort": 5175,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ENV",
          "value": "development"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [],
      "dependsOn": [
        {
          "containerName": "fluentbit",
          "condition": "START"
        }
      ],
      "readonlyRootFilesystem": false,
      "logConfiguration": {
        "logDriver": "awsfirelens"
      }
    },
    {
      "name": "fluentbit",
      "image": "public.ecr.aws/aws-observability/aws-for-fluent-bit:init-latest",
      "cpu": 256,
      "memory": 512,
      "memoryReservation": 256,
      "portMappings": [],
      "essential": true,
      "environment": [
        {
          "name": "LOG_GROUP_NAME",
          "value": "ecs/development-sbcntr-main/backend"
        },
        {
          "name": "aws_fluent_bit_init_s3_1",
          "value": "arn:aws:s3:::development-sbcntr-fluentbit-config/sbcntr/extra.conf"
        },
        {
          "name": "aws_fluent_bit_init_file_1",
          "value": "/fluent-bit/parsers/parsers.conf"
        },
        {
          "name": "FIREHOSE_DELIVERY_STREAM_NAME",
          "value": "development-sbcntr-fluentbit-log-router"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "user": "0",
      "readonlyRootFilesystem": false,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "ecs/fluentbit-log-router/development-sbcntr-main/backend",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "fluentbit"
        }
      },
      "firelensConfiguration": {
        "type": "fluentbit"
      }
    }
  ],
  "family": "development-sbcntr-backend",
  "taskRoleArn": "arn:aws:iam::{aws_account_id}:role/development-sbcntr-ecs-backend",
  "executionRoleArn": "arn:aws:iam::{aws_account_id}:role/development-sbcntr-ecs-execution-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "tags": [
    {
      "key": "Project",
      "value": "sbcntr"
    },
    {
      "key": "Environment",
      "value": "development"
    },
    {
      "key": "Service",
      "value": "sbcntr"
    },
    {
      "key": "CreatedBy",
      "value": "Terraform"
    }
  ]
}
